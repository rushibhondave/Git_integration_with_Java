package com.demo.DAO;

public class Reaopted {


    public static void main(String[] args) {
        int num = 28;
        int sqrt = (int) Math.sqrt(num);
        
        // Calculate the nearest perfect square
        int perfectSquare = sqrt * sqrt;

        // Calculate the difference
        int difference = num - perfectSquare;

        System.out.println("Nearest perfect square: " + perfectSquare);
        System.out.println("Number of + or - required: " + Math.abs(difference));
    }
}